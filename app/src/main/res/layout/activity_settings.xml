<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_start_image_button_back"
        android:layout_marginTop="@dimen/margin_start_image_button_back"
        android:id="@+id/buttonBack"
        android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                style="@style/TitleStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="@dimen/main_text_size"
                android:layout_marginTop="@dimen/margin_top_text_button_back"
                android:layout_marginStart="@dimen/margin_start_text_button_back"
                android:layout_marginBottom="@dimen/margin_bottom_text_button_back"
                android:layout_marginEnd="@dimen/margin_end_text_button_back"
                android:fontFamily="@font/ys_display_medium"
                style="@style/TitleStyle"/>
    </FrameLayout>

    <FrameLayout
        style="@style/FrameStyle"
        android:layout_marginTop="24dp">

        <TextView
            style="@style/TextSettingsStyle"
            android:text="@string/dark_theme" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="6dp"
            app:thumbTint="@color/switcher_thumb"
            app:trackTint="@color/switcher_track"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        style="@style/FrameStyle">

        <TextView
            style="@style/TextSettingsStyle"
            android:text="@string/share" />

        <ImageView
            android:id="@+id/buttonShare"
            android:foreground="?attr/selectableItemBackground"
            style="@style/ImageSettingsStyle"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        style="@style/FrameStyle">

        <TextView
            style="@style/TextSettingsStyle"
            android:text="@string/support" />

        <ImageView
            android:id="@+id/buttonSupport"
            android:foreground="?attr/selectableItemBackground"
            style="@style/ImageSettingsStyle"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        style="@style/FrameStyle">

        <TextView
            style="@style/TextSettingsStyle"
            android:text="@string/agreement" />

        <ImageView
            android:id="@+id/buttonAgreement"
            android:foreground="?attr/selectableItemBackground"
            style="@style/ImageSettingsStyle"
            android:src="@drawable/arrow_forward" />
    </FrameLayout>

</LinearLayout>
