<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/bottom_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/app_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="BackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="FrameStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="TitleStyle" >
        <item name="tint">@color/app_black</item>
        <item name="android:textColor">@color/app_black</item>
    </style>
    <style name="SearchBackgroundStyle">
        <item name="android:background">@color/gray1</item>
    </style>
    <style name="TextSettingsStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_marginTop">@dimen/settings_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin_bot</item>
        <item name="android:layout_marginStart">@dimen/settings_text_margin_start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ImageSettingsStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/settings_icon_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_icon_margin_bot</item>
        <item name="android:layout_marginEnd">@dimen/settings_icon_margin_end</item>
    </style>
    <style name="TextTrackArtistStyle" >
        <item name="android:textColor">@color/gray</item>
        <item name="tint">@color/gray</item>
        <item name="android:textSize">@dimen/artist_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <style name="RefreshButtonStyle"  parent="Theme.MaterialComponents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/app_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_refresh</item>
        <item name="cornerRadius">@dimen/button_refresh_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TrackNameStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TrackInformationStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/track_information</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TabsStyle" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/tabs_text</item>
    </style>
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_navigation_selector</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
    </style>
    <style name="BottomNavigationStyle.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/bottom_navigation_text</item>
    </style>
    <style name="CreatePlaylistButtonStyle"  parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_create</item>
        <item name="cornerRadius">@dimen/button_create_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/blue</item>
    </style>
    <style name="PlaylistCardStyle" >
        <item name="android:textColor">@color/playlist_card</item>
        <item name="android:textSize">@dimen/playlist_card_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <style name="PlaylistBottomSheetNameStyle" >
        <item name="android:textColor">@color/playlist_bottom_sheet_name</item>
        <item name="android:textSize">@dimen/playlist_bottom_sheet_name</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <style name="PlaylistBottomSheetDescriptionStyle" >
        <item name="android:textColor">@color/playlist_bottom_sheet_description</item>
        <item name="android:textSize">@dimen/playlist_bottom_sheet_description</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <style name="PlaylistBottomSheetTitleStyle" >
        <item name="android:textColor">@color/playlist_bottom_sheet_title</item>
        <item name="android:textSize">@dimen/playlist_bottom_sheet_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="PlaylistNameStyle" >
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">@dimen/playlist_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PlaylistDescriptionStyle" >
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">@dimen/playlist_description</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="PlaylistBottomSheetShareStyle" >
        <item name="android:textColor">@color/playlist_bottom_sheet_title</item>
        <item name="android:textSize">@dimen/playlist_bottom_sheet_name</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>